<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.scu.lly.customviews.view.tagflow.TagFlowEnhanceView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bitmapshaderBtns"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp">
        <com.scu.lly.customviews.view.aboutpaint.TelescopeView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bitmapshader_telescopeview"
            android:background="@android:color/black"
            android:visibility="visible"/>

        <com.scu.lly.customviews.view.aboutpaint.AvatorView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:id="@+id/bitmapshader_avator"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>