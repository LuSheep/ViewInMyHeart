<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dip"
                android:gravity="center"
                android:background="@drawable/common_white_gray_btn_bg"
                android:text="泡泡弹窗"
                android:onClick="paopaoDemo"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#e4e4e4"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dip"
                android:gravity="center"
                android:background="@drawable/common_white_gray_btn_bg"
                android:text="炫酷Progress"
                android:onClick="progressAnimDemo"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#e4e4e4"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dip"
                android:gravity="center"
                android:background="@drawable/common_white_gray_btn_bg"
                android:text="波浪View or 优惠券背景"
                android:onClick="bolangviewDemo"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#e4e4e4"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dip"
                android:gravity="center"
                android:background="@drawable/common_white_gray_btn_bg"
                android:text="抽屉菜单"
                android:onClick="chouticaidanDemo"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#e4e4e4"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dip"
                android:gravity="center"
                android:background="@drawable/common_white_gray_btn_bg"
                android:text="时速盘"
                android:onClick="speedPanelDemo"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>