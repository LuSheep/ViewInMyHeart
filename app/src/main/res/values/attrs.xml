<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 优惠券部分 -->
    <declare-styleable name="CouponStyle">
        <attr name="vertical_style">
            <enum name="none" value="0"/>
            <enum name="circle" value="1" />
            <enum name="triangle" value="2"/>
        </attr>
        <attr name="horizontal_style">
            <enum name="none" value="0"/>
            <enum name="circle" value="1" />
            <enum name="triangle" value="2"/>
        </attr>
    </declare-styleable>

    <!-- qq健康部分-公共属性部分 -->
    <attr name="titleSize" format="dimension"></attr>
    <attr name="titleText" format="string"></attr>
    <attr name="titleColor" format="color|reference"></attr>
    <attr name="lineColor" format="color|reference"></attr>
    <declare-styleable name="QQHealthViewStyles">
        <attr name="titleColor" />
        <attr name="lineColor" />
    </declare-styleable>

    <!--自定义圆形头像、圆角头像等 -->
    <attr name="roundRadius" format="dimension"/>
    <attr name="type">
        <enum name="circle" value="0" />
        <enum name="round" value="1" />
    </attr>
    <attr name="borderWidth" format="dimension"/>
    <attr name="borderColor" format="color|reference" />
    <declare-styleable name="CustomImageView">
        <attr name="roundRadius" />
        <attr name="type" />
        <attr name="borderWidth" />
        <attr name="borderColor" />
    </declare-styleable>

    <declare-styleable name="TagFlowEnhanceView">
        <attr name="needDynamicDealMargin" format="boolean" />
        <attr name="isEdgeLeftAndRightViewAssignMargin" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ShadowBitmapView">
        <attr name="src" format="reference" />
        <attr name="shadowDx" format="integer" />
        <attr name="shadowDy" format="integer" />
        <attr name="shadowColor" format="color" />
        <attr name="shadowRadius" format="float" />
    </declare-styleable>
</resources>
